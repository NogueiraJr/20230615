// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          String      @id @default(cuid())
  name        String
  emails      UserEmails[]
  createAt    DateTime    @default(now())
  type        String
  userType    UserTypes   @relation(fields: [type], references: [type])
}

model UserEmails {
  id          String      @id @default(cuid())
  address     String
  userId      String
  createAt    DateTime    @default(now())
  user        Users       @relation(fields: [userId], references: [id])
}

model UserTypes {
  type        String      @id @unique
  name        String
  description String?
  users       Users[]
}
